<mvc:View controllerName="invoices.controller.HelloPanel" 
            xmlns="sap.m"
            xmlns:mvc="sap.ui.core.mvc" 
            xmlns:core="sap.ui.core"
            displayBlock="true">

    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiSmallMarginEnd" />
            <Input value="{/recipient/name}" valueLiveUpdate="true" width="60%" />
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements" />
        </content>
    </Panel>
    <core:Fragment fragmentName="invoices.view.Form01" type="XML" />
</mvc:View>
