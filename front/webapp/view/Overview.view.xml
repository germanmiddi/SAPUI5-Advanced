<mvc:View controllerName="front.controller.App"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">
            <Page title="{i18n>appTitle}">
                    <headerContent>
                    <Button id="helloDialogHeader" 
                        icon="sap-icon://action" 
                        press=".onOpenDialogHeader" 
                        class="sapUiSmallMarginEnd" />
                    </headerContent>
                    <content>
                        <mvc:XMLView viewName="front/view/HelloPanel"/>
                        <mvc:XMLView viewName="front/view/InvoicesList"/>
                    </content>                  
            </Page>
</mvc:View>